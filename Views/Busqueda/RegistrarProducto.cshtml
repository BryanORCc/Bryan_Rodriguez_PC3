@model Producto

<h1>REGISTRAR PRODUCTO</h1>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="NombreProducto">Nombre del Producto</label>
        <input asp-for="NombreProducto" class="form-control" placeholder="ingresar nombre...">
    </div>

    <div class="form-group">
        <label asp-for="Foto">Foto del Producto</label>
        <input asp-for="Foto" class="form-control" placeholder="ingresar url de la imagen...">
    </div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripcion</label>
        <input asp-for="Descripcion" class="form-control" placeholder="ingresar descripcion del producto...">
    </div>

    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" placeholder="ingresar precio del producto...">
    </div>

    <div class="form-group">
        <label asp-for="Celular">Celular</label>
        <input asp-for="Celular" class="form-control" placeholder="ingresar celular del comprador...">
    </div>

    <div class="form-group">
        <label asp-for="LugarCompra">Lugar de Compra</label>
        <input asp-for="LugarCompra" class="form-control" placeholder="ingresar lugar de compra...">
    </div>

    <div class="form-group">
        <label asp-for="NombreComprador">Nombre del Comprador</label>
        <input asp-for="NombreComprador" class="form-control" placeholder="ingresar nombre del comprador...">
    </div>

    <div class="form-group">
        <label asp-for="Categoria">Categoria</label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control"></select>
    </div>

    <button class="btn btn-primary">Registrar</button>
</form>